# TLDR Music Backend - Environment Variables

# Application
APP_NAME="TLDR Music API"
DEBUG=true
ENVIRONMENT=development

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=tldrmusic

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Phone Auth (Twilio)
PHONE_AUTH_PROVIDER=mock  # Use 'twilio' in production
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# YouTube API
YOUTUBE_API_KEY=

# CORS
CORS_ORIGINS=["http://localhost:8000","http://localhost:3000","http://127.0.0.1:8000","http://localhost:8002","http://127.0.0.1:8002","https://mono-tv.github.io"]
